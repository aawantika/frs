<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WithdrawalActivity" >
    
    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAmount"
        android:layout_alignBottom="@+id/textViewAmount"
        android:layout_alignLeft="@+id/editTextReason"
        android:ems="10" />

   <Button
       android:id="@+id/button1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/editTextCategory"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="34dp"
       android:onClick="onClick"
       android:text="@string/submit" />

   <EditText
       android:id="@+id/editTextCategory"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/textViewCategory"
       android:layout_toRightOf="@+id/textViewAmount"
       android:ems="10" />

   <EditText
       android:id="@+id/editTextReason"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/textViewReason"
       android:layout_alignLeft="@+id/editTextCategory"
       android:ems="10" />

   <TextView
       android:id="@+id/textViewCategory"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/button1"
       android:layout_marginBottom="32dp"
       android:text="@string/category"
       android:textAppearance="?android:attr/textAppearanceLarge" />

   <TextView
       android:id="@+id/textViewReason"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/editTextCategory"
       android:layout_alignParentLeft="true"
       android:layout_marginBottom="23dp"
       android:text="@string/reason"
       android:textAppearance="?android:attr/textAppearanceLarge" />

   <TextView
       android:id="@+id/textViewAmount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/editTextReason"
       android:layout_alignLeft="@+id/textViewReason"
       android:layout_marginBottom="46dp"
       android:text="@string/amount"
       android:textAppearance="?android:attr/textAppearanceLarge" />

   <EditText
       android:id="@+id/editTextDate"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/editTextAmount"
       android:layout_alignLeft="@+id/editTextAmount"
       android:layout_marginBottom="44dp"
       android:ems="10"
       android:hint="@string/enterDate"
       android:inputType="date" />

   <TextView
       android:id="@+id/textViewDate"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/editTextDate"
       android:layout_alignLeft="@+id/textViewAmount"
       android:text="@string/date"
       android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>