<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3ecef"
    tools:context="edu.gatech.financialapplication.NewPasswordActivity"
    tools:ignore="MergeRootFrame" >
    
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#16718d"
        android:gravity="center"
        android:text="@string/newPW"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />
    
    <Button
        android:id="@+id/back"
        android:layout_width="58dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="11.5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/back_button"
        android:onClick="onBackClick"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirmPassword"
        android:layout_marginTop="145dp"
        android:background="@drawable/rounded_rectanglebutton"
        android:onClick="onChangeClick"
        android:text="@string/changePassword"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/confirmPassText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirmPassword"
        android:layout_below="@+id/confirmPassword"
        android:background="#ffffff"
        android:padding="5dp"
        android:ems="10"
        android:hint="@string/confirmPasswordHint"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newPassText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPassword"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:padding="5dp"
        android:ems="10"
        android:hint="@string/newPasswordHint"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPassText"
        android:layout_below="@+id/newPassText"
        android:text="@string/confirmPassword"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPassText"
        android:layout_below="@+id/title"
        android:layout_marginTop="75dp"
        android:text="@string/newPassword"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>